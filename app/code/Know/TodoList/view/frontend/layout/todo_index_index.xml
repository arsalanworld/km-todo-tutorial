<?xml version="1.0" encoding="UTF-8" ?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="km.todo"
                   template="Know_TodoList::todo.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="km-todo-scope" xsi:type="array">
                                <item name="component" xsi:type="string">uiComponent</item>
                                <item name="config" xsi:type="array">
                                    <item name="template" xsi:type="string">Know_TodoList/todopage</item>
                                </item>
                                <item name="children" xsi:type="array">
                                    <item name="todo" xsi:type="array">
                                        <item name="component" xsi:type="string">Know_TodoList/js/view/todo</item>
                                        <item name="displayArea" xsi:type="string">todo</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
